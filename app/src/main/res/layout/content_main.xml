<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="2nd Year Course"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="3rd Year Course"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button2"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="4th Year Course"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button3"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="Downloaded Files"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button4"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="Help Section"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button5"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="Nptel Lectures"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button6"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="Chemical Quiz"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button7"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="Gate Previous Year Paper"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button8"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="#fffafa"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>



</LinearLayout>